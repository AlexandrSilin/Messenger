<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="messenger.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <TextArea fx:id="mainWindow" editable="false" prefHeight="490.0" prefWidth="390.0" />
      <TextField fx:id="messageField" alignment="BOTTOM_RIGHT" maxWidth="-Infinity" prefHeight="26.0" prefWidth="340.0" promptText="Print your message here" GridPane.rowIndex="1" />
      <Button fx:id="sendButton" mnemonicParsing="false" onAction="#buttonIsClicked" text="Send" textAlignment="CENTER" translateX="340.0" GridPane.rowIndex="1" />
   </children>
</GridPane>
